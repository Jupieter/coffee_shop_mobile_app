<ContentNavigationDrawer> 
    # Let menu
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: cup_img.height

        Image:
            id: cup_img
            size_hint: None, None
            size: "60dp", "60dp"
            source: "image/coffe_draw.webp"

    MDLabel:
        text: "Jung PÃ©ter"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "peterjung777@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        id: scroller

        DrawerList:
            id: md_list


MDScreen:   
    # Bottom menu
    id: mdscreen
    md_bg_color: app.theme_cls.primary_light
    FitImage:
        id: coffee
        size_hint: (1, 1)
        padding: 4
        # size: (root.width, root.height)
        source: "image/bean_bg.jpg"

    MDBottomNavigation:
        panel_color: app.theme_cls.primary_color
        selected_color_background: "Custom"
        text_color_active: 0, 0, 0, 1

        MDBottomNavigationItem:
            name: 'screen 1'
            text: 'Home'
            icon: 'home'
            badge_icon: "numeric-10"

            MDLabel:
                text: 'Home'
                halign: 'center'
            MDBoxLayout:
                id: box_login
                orientation: "vertical"
                adaptive_size: True
                spacing: "56dp"
                pos_hint: {"center_x": .5, "center_y": .5}


        MDBottomNavigationItem:
            name: 'screen 2'
            text: 'Order'
            icon: 'coffee'
            badge_icon: "numeric-5"
            
            MDLabel:
                text: 'Order Coffe'
                halign: 'center'
            MDRoundFlatButton:
                text: "LOG IN"
                font_size: 12
                pos_hint: {"center_x": 0.5}

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Make'
            icon: 'coffee-maker'

            MDLabel:
                text: 'Make Coffee'
                halign: 'center'

        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Login'
            icon: 'account-cancel'

            MDLabel:
                text: 'Login'
                halign: 'center'

    
    MDNavigationLayout:

        ScreenManager:
            id: Hiba1

            MDScreen:
                

                MDToolbar:
                    id: mdtoolbar1
                    title: "I-me Coffe Bar 'Ante Portas' "
                    elevation: 10
                    pos_hint: {"top": 1}
                    md_bg_color: app.theme_cls.primary_color
                    specific_text_color: "#000000"
                    left_action_items:
                        [['menu', lambda x: nav_drawer.set_state("open")]]
                    elevation:10

                    MDIconButton:         
                        pos_hint: {"center_x": .5, "center_y": .5}
                        icon: "image/coffe_bean_heart.png"


        MDNavigationDrawer:
            id: nav_drawer
            md_bg_color: app.theme_cls.primary_color
            radius: (0, 16, 16, 0) if self.anchor == "left" else (16, 0, 0, 16)

            ContentNavigationDrawer:
                id: content_drawer
                orientation: 'vertical'
                padding: "8dp"
                spacing: "8dp"


    
            
                