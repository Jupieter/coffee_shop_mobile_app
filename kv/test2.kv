# Menu item in the DrawerList list.
<ItemDrawer>
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color

<ContentNavigationDrawer>
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: cup_img.height

        Image:
            id: cup_img
            size_hint: None, None
            size: "60dp", "60dp"
            source: "image/coffe_draw.webp"

    MDLabel:
        text: "Jung PÃ©ter"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "peterjung777@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        id: scroller

        DrawerList:
            id: md_list


MDScreen:
    id: mdscreen
    md_bg_color: app.theme_cls.primary_light
    FitImage:
        id: coffee
        size_hint: (1, 1)
        padding: 4
        # size: (root.width, root.height)
        source: "image/bean_bg.jpg"
    
    MDNavigationLayout:

        ScreenManager:
            id: Hiba1

            MDScreen:
                

                MDToolbar:
                    id: mdtoolbar1
                    title: "I-me Coffe Bar 'Ante Portas' "
                    elevation: 10
                    pos_hint: {"top": 1}
                    md_bg_color: app.theme_cls.primary_color
                    specific_text_color: "#000000"
                    left_action_items:
                        [['menu', lambda x: nav_drawer.set_state("open")]]
                    elevation:10

                    MDIconButton:         
                        pos_hint: {"center_x": .5, "center_y": .5}
                        icon: "image/coffe_bean_heart.png"
                    
                
                MDToolbar:
                    id: mdtoolbar2
                    title: "Navigation Drawer"
                    elevation: 10
                    pos_hint: {"bottom": 1}
                    md_bg_color: app.theme_cls.primary_color
                    specific_text_color: "#000000"

                    right_action_items:
                        [
                        ["home", lambda x: app.callback(x), "Home"],
                        ["coffee", lambda x: app.callback(x), "Coffee order"],
                        ["coffee-maker", lambda x: app.callback(x), "Make Coffe"],
                        ["account-cancel", lambda x: app.callback(x), "Account"],
                        ]
                
                
                    


        MDNavigationDrawer:
            id: nav_drawer
            md_bg_color: app.theme_cls.primary_color
            radius: (0, 16, 16, 0) if self.anchor == "left" else (16, 0, 0, 16)

            ContentNavigationDrawer:
                id: content_drawer
                orientation: 'vertical'
                padding: "8dp"
                spacing: "8dp"
            
                